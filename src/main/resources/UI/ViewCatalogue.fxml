<HBox fx:id="viewCatalogue" layoutX="10.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="738.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.booklidio.Frontend.FrontendController">
   <children>
      <VBox alignment="TOP_CENTER" prefWidth="300.0" spacing="12.0">
         <padding>
            <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
         </padding>
         <children>
            <Label styleClass="title-1" text="Catalogue" />
            <Separator prefWidth="200.0" />
            <VBox fx:id="catalogueGroup" disable="true" spacing="24.0">
               <children>
                  <VBox spacing="6.0">
                     <children>
                        <Label styleClass="title-4" text="ISBN" />
                        <TextField fx:id="catalogue_ISBN" />
                     </children>
                  </VBox>
                  <VBox layoutX="10.0" layoutY="10.0" spacing="6.0">
                     <children>
                        <Label styleClass="title-4" text="Title" />
                        <TextField fx:id="catalogue_Title" />
                     </children>
                  </VBox>
                  <VBox layoutX="10.0" layoutY="102.0" spacing="6.0">
                     <children>
                        <Label styleClass="title-4" text="New Price" />
                        <TextField fx:id="catalogue_NewPrice" />
                     </children>
                  </VBox>
                  <VBox layoutX="10.0" layoutY="194.0" spacing="6.0">
                     <children>
                        <Label styleClass="title-4" text="Used Price" />
                        <TextField fx:id="catalogue_UsedPrice" />
                     </children>
                  </VBox>
                  <VBox layoutX="10.0" layoutY="286.0" spacing="6.0">
                     <children>
                        <Label styleClass="title-4" text="Cost Price" />
                        <TextField fx:id="catalogue_CostPrice" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <Separator layoutX="22.0" layoutY="110.0" prefWidth="200.0" />
            <HBox alignment="CENTER" spacing="12.0">
               <children>
                  <ToggleButton fx:id="catalogue_toggleEdit" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#handle_catalogue_toggleEdit" text="Toggle Edit Mode">
                     <graphic>
                        <FontIcon iconLiteral="mdi2s-square-edit-outline" />
                     </graphic>
                  </ToggleButton>
                  <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#catalogue_edit_save" text="Save">
                     <graphic>
                        <FontIcon iconLiteral="mdi2c-content-save-outline" />
                     </graphic>
                  </Button>
                  <Button contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#catalogue_edit_discard" text="Discard">
                     <graphic>
                        <FontIcon iconLiteral="mdi2t-trash-can-outline" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <TableView fx:id="dashboard_CatalogueTable" editable="true" HBox.hgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="catalogueTable_TextbookID" editable="false" prefWidth="75.0" text="ISBN" />
            <TableColumn fx:id="catalogueTable_TextbookTitle" editable="false" prefWidth="75.0" text="Title" />
            <TableColumn fx:id="catalogueTable_TextbookNewPrice" editable="false" prefWidth="75.0" text="New Price" />
            <TableColumn fx:id="catalogueTable_TextbookUsedPrice" editable="false" prefWidth="75.0" text="Used Price" />
            <TableColumn fx:id="catalogueTable_TextbookCostPrice" editable="false" prefWidth="75.0" text="Cost Price" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</HBox>
